<% if !@invites.empty? %>
    <div class="alert alert-info my-4">
    <p>You have one or more invites:</p>
    <% @invites.each do |invite| %>
        <div class="card card-task">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div class="card-title mb-0">
            <a href="#"><h6><%= invite.account.name %></h6></a>
            <span class="text-small"><%= invite.from_user.name %></span>
            </div>
            <div class="card-meta">
            <a href="<%= decline_invite_path(invite.apikey) %>" class="btn btn-outline-secondary mr-2">Decline</a>
            <a href="<%= accept_invite_path(invite.apikey) %>" class="btn btn-primary">Accept</a>
            </div>
        </div>
        </div><!--end of task-->
    <% end %>
    </div>
<% end %>