
<div class="modal-body">
    <label class="required form-label">Name</label>
    <input type="text" id="name" name="name" class="form-control mb-2" placeholder="Name" value="<%= @field.name if @field %>" required />

    <p><label for="label_as_placeholder">
        <%= f.check_box :label_as_placeholder, checked: @field && @field.label_as_placeholder %>
        Use field name as placeholder and hide field label
    </label></p>

    <label class="required form-label">Placeholder</label>
    <input type="text" id="placeholder" name="placeholder" class="form-control mb-2" placeholder="Placeholder" value="<%= @field.placeholder if @field %>" />

    <label class="required form-label">Type</label>
    <select class="form-control mb-2" id="field_type" name="field_type">
        <% FormField::TYPES.each do |key, type| %>
            <option value="<%= key %>" data-has-children="<%= type[:has_children] %>" <%= 'selected' if @field && @field.field_type == key %>><%= type[:name] %></option>
        <% end %>
    </select>

    <div id="form-field-children" class="col-12 col-md-6 mb-3"></div>

    <label class="form-label" for="col_width">Column width</label>
    <select class="form-control mb-2" id="col_width" name="col_width">
        <option <%= 'selected' if @field && @field.col_width == 12 %> value="12">Full width</option>
        <option <%= 'selected' if @field && @field.col_width == 6 %> value="6">1/2</option>
        <option <%= 'selected' if @field && @field.col_width == 4 %> value="4">1/3</option>
        <option <%= 'selected' if @field && @field.col_width == 3 %> value="3">1/4</option>
    </select>

    <p><label for="required">
        <%= f.check_box :required, checked: @field && @field.required %>
        Required?
    </label></p>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">Save changes</button>
</div>